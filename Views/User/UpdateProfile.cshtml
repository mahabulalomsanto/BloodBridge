@model ApplicationUser

<style>
    .profile-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
    }

    .form-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .btn-custom {
        background-color: #5cb85c;
        color: #fff;
    }
</style>

    <div class="container">
        <div class="form-container">
            <h2 class="text-center">Edit Profile</h2>
        <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">

                <!-- Name -->
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter your name">
            </div>

                <!-- Email -->
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your Email">
            </div>

                <!-- Phone -->
            <div class="form-group">
                <label asp-for="Phone">Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="Enter your Phone">
            </div>

                <!-- Blood Group -->
                <div class="form-group">
                    <label asp-for="BloodGroup">Blood Group</label>
                    <select class="form-control" asp-for="BloodGroup">
                        <option value="A+">A+</option>
                        <option value="A-">A-</option>
                        <option value="B+">B+</option>
                        <option value="B-">B-</option>
                        <option value="AB+">AB+</option>
                        <option value="AB-">AB-</option>
                        <option value="O+">O+</option>
                        <option value="O-">O-</option>
                    </select>
                </div>

                <!-- District -->
                <div class="form-group">
                    <label asp-for="District">District</label>
                    <input asp-for="District" class="form-control" placeholder="Enter your District">
                </div>
                <br />
                <img    src="@Url.Action("GetPhoto", "User", new{id=Model.Id} )"     style="width: 100px" />
                <br />
                <div class="form-group">
                    <label>Upload Photo</label>
                    <input type="file" class="form-control-file" name="photo"/>
                </div>

                <br />
                <!-- Submit Button -->
                <button type="submit" class="btn btn-custom btn-block">Save Changes</button>
            </form>
        </div>
    </div>


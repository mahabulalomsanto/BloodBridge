@using Microsoft.AspNetCore.Identity
@model IEnumerable<ApplicationUser>

<h2>User List</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Blood Group</th>
            <th>District</th>
            <th>Can Donate Blood</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.BloodGroup</td>
                <td>@user.District</td>

                @if (user.CanDonate == true) {<td> Yes</td>}
                else { <td> No</td>}
                
                <td>
                    @if (ViewBag.UserRoles[user] is IList<string> roles && roles.Any())
                    {
                        foreach (var role in roles)
                        {
                            <span>@role</span>

                            <br />
                        }
                    }
                    else
                    {
                        <span>No Roles</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Admin" asp-action="AddUser" class="btn btn-primary">Add New User</a>

